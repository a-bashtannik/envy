{
    "name": "worksome/envy",
    "description": "Automatically keep your .env files in sync.",
    "keywords": [
        "worksome",
        "laravel",
        "envsync"
    ],
    "homepage": "https://github.com/worksome/envsync",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Downing",
            "email": "luke@worksome.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "illuminate/contracts": "^8.73",
        "nikic/php-parser": "^4.13",
        "nunomaduro/termwind": "^1.4",
        "spatie/laravel-package-tools": "^1.9.2",
        "thecodingmachine/safe": "^2.1"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.10",
        "nunomaduro/larastan": "^1.0 || ^2.0",
        "orchestra/testbench": "^6.22",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-parallel": "^1.0",
        "pestphp/pest-plugin-laravel": "^1.1",
        "spatie/laravel-ray": "^1.26",
        "worksome/coding-style": "^0.10.0"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\Envy\\": "src",
            "Worksome\\Envy\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\Envy\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcbf",
        "test:unit": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/phpcs -n",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Worksome\\Envy\\EnvyServiceProvider"
            ],
            "aliases": {
                "Envy": "Worksome\\Envy\\Facades\\Envy"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
